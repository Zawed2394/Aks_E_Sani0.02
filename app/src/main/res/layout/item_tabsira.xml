<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@android:color/transparent">

    <!-- Number (start) -->
    <TextView
        android:id="@+id/tabsira_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#444"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Title (start aligned with margin after number) -->
    <TextView
        android:id="@+id/tabsira_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tabsira_number"
        android:layout_marginStart="8dp"
        android:text="عنوان"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_alignParentTop="true" />

    <!-- Author (center horizontally) -->
    <TextView
        android:id="@+id/tabsira_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مصنف"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_below="@id/tabsira_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />
</RelativeLayout>
